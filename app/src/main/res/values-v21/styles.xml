<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainTheme" parent="BaseTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/color_EEEEEE</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="AuthTheme" parent="BaseTheme">
        <item name="android:statusBarColor">@color/color_233944</item>
    </style>

    <style name="AdditionalScreensTheme" parent="BaseTheme">
        <item name="android:windowBackground">@color/color_EEEEEE</item>
    </style>

    <style name="PhotoPreviewTheme" parent="BaseTheme">
        <item name="android:statusBarColor">@android:color/black</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/layer_splash</item>
        <item name="android:statusBarColor">@color/color_233944</item>
    </style>

</resources>